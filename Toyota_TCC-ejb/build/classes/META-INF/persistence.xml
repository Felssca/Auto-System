<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ToyotaTCC-ejbPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source>toyotaWPV</non-jta-data-source>
    <class>br.com.toyota.entidades.Cliente</class>
    <class>br.com.toyota.entidades.ClienteHistorico</class>
    <class>br.com.toyota.entidades.Estoque</class>
    <class>br.com.toyota.entidades.FormaPagamentoDominio</class>
    <class>br.com.toyota.entidades.HistoricoVeiculo</class>
    <class>br.com.toyota.entidades.HistoricoVeiculoRevisoes</class>
    <class>br.com.toyota.entidades.LogSistema</class>
    <class>br.com.toyota.entidades.Usuario</class>
    <class>br.com.toyota.entidades.Veiculo</class>
    <class>br.com.toyota.entidades.Compra</class>
    <class>br.com.toyota.entidades.Cidade</class>
    <class>br.com.toyota.entidades.Estado</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
